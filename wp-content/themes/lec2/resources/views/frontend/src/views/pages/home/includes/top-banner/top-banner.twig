{% import "@views/macros/forms/forms.twig" as forms %}


<div class="top-banner top-banner--homepage">
  <div class="container">
    <h1 class="title">{{ topBannerData.top_banner_title}}</h1>
    <div class="row">
      <div class="{{colContent|default('col-lg-6')}}">
        <div class="top-banner-content">
          <h4>{{ topBannerData.top_banner_subtitle}}</h4>
          <div class="lead">{{ topBannerData.top_banner_description | content |raw}}</div>
        </div>
      </div>
      <div class="{{colImage|default('col-lg-6')}}">
        <div class="top-banner-video">
          <video poster="{{topBannerData.top_banner_video_poster}}" controls autoplay muted loop>
            <source src="{{topBannerData.top_banner_video}}" type="video/mp4">
            Your browser does not support the video tag.
          </video>
        </div>
      </div>
    </div>
  </div>
</div>

