{% extends "@views/layouts/layout-default.twig" %}

{# block declare #}

{%
  set viewData = {
    bodyClass: 'privacy-policy-page',
    headerTheme: 'gray',
    footerType: 'primary'
  }
%}

{% block pageContent %}
  {% set privacy_policy_banner = page_data.custom_data.top_banner %}
  {% set bannerData = {
    top_banner_title: privacy_policy_banner.top_banner_title,
    top_banner_description: privacy_policy_banner.top_banner_description,
    top_banner_background: privacy_policy_banner.top_banner_background,
  } %}
  {% include "@views/components/top-banner/top-banner.twig" with {
    'topBannerData': bannerData,
    classPage: 'privacy-policy',
    theme: 'gray'
  }%}

  {% include "@views/pages/privacy-policy/includes/privacy-policy-content/privacy-policy-content.twig" %}

  {% include "@views/components/get-opportunities/get-opportunities.twig" with {
    btnTheme: 'primary',
  }%}
{% endblock %}
